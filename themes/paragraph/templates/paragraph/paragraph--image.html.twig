<div{{ attributes.addClass(classes) }}>
  {# 隐藏原始字段渲染 #}
  <div style="display: none;">
    {{ content }}
  </div>
  {% if image_id is defined %}
    <div 
      id="paragraph-theme-image-{{ image_id }}">
    </div>
  {% else %}
    {# Fallback: 如果没有数据，显示原始内容 #}
    {{ content }}
  {% endif %}
</div>

{% if image_id is defined %}
  <script>
    window.addEventListener('image:load', (data) => {
      const imageId = '{{ image_id }}'
      const imageNode = document.getElementById(`paragraph-theme-image-${imageId}`)
      const image = data?.detail?.[imageId]

      vueMountComponent('image', imageNode, image)
    })
  </script>
{% endif %}
