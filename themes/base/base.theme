<?php

use Drupal\base\Preprocess\ParagraphPreprocessor;

/**
 * Implements hook_preprocess_paragraph().
 */
function base_preprocess_paragraph(&$variables) {
  // 延迟加载预处理器，避免每次请求都实例化
  static $preprocessor = null;
  
  if ($preprocessor === null) {
    $preprocessor = new ParagraphPreprocessor();
  }
  
  $preprocessor->preprocess($variables);
}
