<div style="width: 100%;">
  {# 隐藏原始字段渲染 #}
  <div style="display: none;">
    {{ content }}
  </div>
  {% if timeline_id is defined %}
  <div 
    id="base-theme-timeline-{{ timeline_id }}">
  </div>
  {% else %}
    {# Fallback: 如果没有数据，显示原始内容 #}
    {{ content }}
  {% endif %}
</div>

{% if timeline_id is defined %}
  {{ attach_library('base/theme-components') }}

  <script>
    window.addEventListener('timeline:load', (data) => {
      const timelineId = '{{ timeline_id }}'
      const timelineNode = document.getElementById(`base-theme-timeline-${timelineId}`)
      const timelineItems = data?.detail?.[timelineId]
      
      vueMountComponent('timeline', timelineNode, {
        items: timelineItems
      })
    })
  </script>
{% endif %}
